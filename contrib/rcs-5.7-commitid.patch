+static void
+convert (char const input[N], char *output)
+{
+  static char const zero[N] = { 0, };
+  unsigned char buf[N];
+  size_t o = 0;
+  memcpy (buf, input, N);
+  while (memcmp (buf, zero, N) != 0)
+    output[o++] = alphabet[divide_by (buf, sizeof alphabet)];
+  if (! o)
+    output[o++] = '0';
+  output[o] = '\0';
+}
